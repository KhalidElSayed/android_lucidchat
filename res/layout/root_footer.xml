<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical" >

    <fi.harism.lucidchat.ChatTabs
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_pattern_light"
        android:fadingEdgeLength="40dp"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/root_tabs_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </fi.harism.lucidchat.ChatTabs>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@drawable/bg_pattern_light" >

        <ImageButton
            android:id="@+id/root_footer_send"
            style="@style/imagebutton"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_send" />

        <EditText
            android:id="@+id/root_footer_edit"
            style="@style/edittext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/root_footer_send" />
    </RelativeLayout>

</LinearLayout>